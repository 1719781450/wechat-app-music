.board image{
	width: 100%;
	height: 200px;
	border-bottom: 1px solid #eee;
}

.songlist{
	font-family: 'microsoft yahei';
	width: 100%;
	overflow-x: hidden;
}
.songitem{
	height: 3rem;
	line-height: 1.5rem;
	display: flex;
	border-bottom: 1px solid #eee;
	padding: 10rpx 0;
}
.song-no{
	width: 10%;
	text-align: center;
	vertical-align: middle;
	line-height: 3rem;
}
.detail{
	white-space: nowrap;
	width: 90%;
}
.title{
	font-weight: bold;
}
.subtitle{
	color: #555;
}